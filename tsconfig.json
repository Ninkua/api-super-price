{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
        "@modules/*": [
            "modules/*"
        ],
        "@config/*": [
            "config/*"
        ],
        "@shared/*": [
            "shared/*"
        ],
        "@errors/*": [
            "errors/*"
        ],
        "@utils/*": [
            "utils/*"
        ],
        "@database/*":[
            "database/*"
        ],
        "@services/*":[
            "services/*"
        ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}